<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:background="@drawable/myrect"
    android:padding="15dp"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"

        android:layout_gravity="center|left"
        android:layout_marginRight="15dp"
        android:id="@+id/icon"
        />

    <LinearLayout
        android:background="#FFF"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pk_money"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="100"
            android:textColor="#526d99"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pk_size"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="小"
            android:textColor="#999ca3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pk_address"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:text="学校"
            android:textColor="#999ca3"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:background="#FFF"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageButton
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/receive"
            android:scaleType="centerInside"
            android:id="@+id/receiveimg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiveimg"
            android:text="接单"
            android:textSize="14sp"/>
    </RelativeLayout>
</LinearLayout>